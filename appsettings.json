{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Console"
      }
    ]
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    //"DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ECommerceItemAPI;Trusted_Connection=True;MultipleActiveResultSets=true",
    "DefaultConnection": "server=localhost;port=3306;database=BasicLayeredService;user=root;password=pass;"
    //"Server=.;Database=MangoProductAPI;Trusted_Connection=true;MultipleActiveResultSets=true"
  }
}